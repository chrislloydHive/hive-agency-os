{
  "name": "hive-os",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:inngest": "npx inngest-cli@latest dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\" \"lib/**/*.{ts,tsx}\" \"hooks/**/*.{ts,tsx}\" \"types/**/*.{ts,tsx}\" --cache",
    "lint:budget": "node scripts/check-eslint-warnings.js",
    "lint:ci": "node scripts/check-eslint-warnings.js",
    "lint:report": "mkdir -p reports && eslint \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\" \"lib/**/*.{ts,tsx}\" \"hooks/**/*.{ts,tsx}\" \"types/**/*.{ts,tsx}\" --format json --output-file reports/eslint.json; node scripts/eslint-report.mjs",
    "lint:strict": "eslint \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\" \"lib/**/*.{ts,tsx}\" \"hooks/**/*.{ts,tsx}\" \"types/**/*.{ts,tsx}\" --cache --max-warnings 0",
    "lint:tests": "eslint \"tests/**/*.{ts,tsx}\" --cache",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:trust": "vitest run tests/context/trustRegression.test.ts tests/context/trustRepoScan.test.ts tests/context/aiRouteInvariants.test.ts tests/competition/competitionMutualExclusivity.test.ts",
    "test:labs": "vitest run tests/labs/extractorReplay.test.ts",
    "fixtures:capture": "npx tsx scripts/fixtures/captureLabOutput.ts",
    "fixtures:list": "npx tsx scripts/fixtures/listScenarios.ts",
    "purge:hive": "npx ts-node scripts/purgeHiveCompanies.ts",
    "gap:check": "npx tsx scripts/gapBaselineCheck.ts",
    "ingest:case-study-media": "npx tsx scripts/ingestCaseStudyMedia.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@eslint/eslintrc": "^3.3.1",
    "@google-analytics/admin": "^9.0.1",
    "@google-analytics/data": "^5.2.1",
    "@sparticuz/chromium": "^143.0.4",
    "airtable": "^0.12.2",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "googleapis": "^166.0.0",
    "inngest": "^3.46.0",
    "lucide-react": "^0.554.0",
    "next": "^15.4.8",
    "next-auth": "^4.24.13",
    "openai": "^6.9.1",
    "puppeteer": "^24.31.0",
    "puppeteer-core": "^24.34.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-force-graph-2d": "^1.29.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.5.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.5.2",
    "sharp": "^0.34.5",
    "swr": "^2.3.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.19.25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "exceljs": "^4.4.0",
    "jsdom": "^27.4.0",
    "open": "^11.0.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
